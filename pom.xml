<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.digitalmemex</groupId>
    <artifactId>global</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Digital MemeX :: Global</name>

    <properties>
        <karaf.name>dmx</karaf.name>
        <karaf.version>2.3.0</karaf.version>
        <activemq.version>5.8.0</activemq.version>

        <dm4.version>4.1</dm4.version>
        <dm4.host.url>http://localhost:17071</dm4.host.url>

        <dm4.security.read_requires_login>true</dm4.security.read_requires_login>
        <dm4.security.write_requires_login>true</dm4.security.write_requires_login>
        <dm4.security.subnet_filter>0.0.0.0/0</dm4.security.subnet_filter>

        <file.encoding>UTF-8</file.encoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>deepamehta-public-repository</id>
            <url>http://deepamehta.newthinking.net/maven2</url>
        </repository>
        <repository>
            <id>deepamehta-jenkins-repository</id>
            <url>http://ci.deepamehta.de/repository</url>
        </repository>
    </repositories>

    <modules>
        <module>bundles</module>
        <module>features</module>
        <module>branding</module>
        <module>distribution</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
